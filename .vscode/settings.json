{
  "[chatmode]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
      "comments": "inline",
      "other": "on",
      "strings": "on"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on"
  },
  "[instructions]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
      "comments": "off",
      "other": "off",
      "strings": "off"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on"
  },
  "[prompt]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
      "comments": "off",
      "other": "off",
      "strings": "off"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on"
  },
  "chat.instructionsFilesLocations": {
    "memory-bank/instructions": true
  },
  "chat.modeFilesLocations": {
    "memory-bank/chatmodes": true
  },
  "chat.promptFiles": true,
  "chat.promptFilesLocations": {
    "memory-bank/prompts": true
  },
  "editor.bracketPairColorization.enabled": true,
  "github.copilot.chat.agent.autoFix": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "always",
    "source.organizeImports": "always",
    "source.sort.json": "always"
  },
  // "editor.defaultFormatter": "",
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.indentation": true,
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 4,
  "editor.trimAutoWhitespace": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": "memory-bank/instructions/conventional-commits-must-be-used.instructions.md"
    },
    {
      "file": "memory-bank/prompts/commit-examples.prompt.md"
    }
  ],
  "github.copilot.chat.customInstructionsInSystemMessage": true,
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "text": "Check for modularity, proper TypeScript types, comprehensive error handling, and code comments."
    },
    {
      "text": "Verify compliance with project coding standards and memory bank guidelines."
    },
    {
      "text": "Ensure no direct mutations of shared state and proper dependency management."
    }
  ],
  "github.copilot.enable": {
    "*": true
  },
  "material-icon-theme.folders.associations": {
    "chatmodes": "vm",
    "instructions": "class",
    "memory-bank": "rules",
    "prompts": "log"
  },
  "search.useIgnoreFiles": true
}
